@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager


<!DOCTYPE html>
<html>
<head>
  <meta name="viewport" content="width=device-width" />
  <link rel="stylesheet" asp-href-include="lib/bootstrap/dist/css/*.min.css" />
  <title>@ViewBag.Title</title>
  <style>

    .input-validation-error {
      border-color: red;
      background-color: #fee;
    }
  </style>
  <script src="/lib/jquery/dist/jquery.min.js"></script>
  <script src="/lib/jquery-validation/dist/jquery.validate.min.js"></script>
  <script src="/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js">
  </script>
</head>
<body class="m-1 p-1">
  <div class="bg-info p-2 row">
    <div class="col">
      <h4>@ViewBag.Title</h4>
    </div>
    @if (User.Identity.IsAuthenticated)
    {
      <div class="col-2">
        <a class="btn btn-sm btn-primary"
           asp-action="Logout" asp-controller="Account">Log Out</a>
      </div>
    }
    else if (!User.Identity.IsAuthenticated)
    {
      <div class="col-2">
        <a class="btn btn-sm btn-primary" asp-action="List" asp-controller="Product">Home</a>
        @*<a class="btn btn-sm btn-primary" asp-area="Identity" asp-page="/Account/Register">Register</a>*@
        <a class="btn btn-sm btn-primary" asp-action="Login" asp-controller="Account">Login</a>
        <a class="btn btn-sm btn-primary" asp-action="Register" asp-controller="Account">Register</a>
      </div>

    }


  </div>
  @if (TempData["message"] != null)
  {
    <div class="alert alert-success mt-1">@TempData["message"]</div>
  }
  @RenderBody()
</body>
</html>
