@model IEnumerable<Order>
@{
  ViewBag.Title = "Orders";
  Layout = "_AdminLayout";
}

@if (Model.Count() > 0)
{
  <table class="table table-bordered table-striped">
    <tr><th>Name</th><th>Zip</th><th colspan="2">Details</th><th></th></tr>

    @foreach (Order o in Model)
    {
      <tr>
        <td>@o.Name</td>
        <td>@o.Zip</td>
        <th>Product</th>
        <th>Quantity</th>
        <th></th>
      </tr>
      @foreach (CartLine line in o.Lines)
      {
        <tr>
          <td colspan="2"></td>
          <td>@line.Product.Name</td>
          <td>@line.Quantity</td>
          <td></td>
        </tr>
      }
    }
  </table>
}
else
{
  <div class="text-center">No Shipped Orders</div>
}

<div class="text-center">
  <a asp-action="Index" class="btn btn-primary">Index</a>
  <a asp-action="List" class="btn btn-secondary">Orders List</a>
  <a asp-action="Unshipped" class="btn btn-secondary">Unshipped Orders</a>

</div>
